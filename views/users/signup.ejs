<% layout('/layouts/boilerplate') -%>
<h2 class="mt-3 col-6 offset-3">Signup on WanderLust</h2>
<div class="row mt-3">
  <div class="col-6 offset-3">
    <form action="/signup" method="POST" class="needs-validation" novalidate>
      <div class="mb-3">
        <br />
        <label for="username" class="form-label">Username</label>
        <input class="form-control" name="username" type="text" required id="username" />
        <div class="valid-feedback"></div>
        <div class="invalid-feedback">Please Enter a Username</div>
      </div>
      <div class="mb-3">
        <br />
        <label for="email" class="form-label">Email</label>
        <input class="form-control" name="email" type="email" required id="email" />
        <div class="valid-feedback"></div>
        <div class="invalid-feedback">Please Enter a Valid email address</div>
      </div>
      <div class="mb-3">
        <br />
        <label for="password" class="form-label">Password</label>
        <input class="form-control" name="password" type="password" required id="password" />
        <div class="valid-feedback"></div>
        <div class="invalid-feedback">Please Enter a password</div>
      </div>
      <button class="btn btn-outline-dark">Signup</button>
    </form>
  </div>
</div>
